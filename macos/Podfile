# âœ… GÃœNCELLENMÄ°Å MACOS PODFILE (Flutter 3.x ve macOS 10.15+ uyumlu)
platform :osx, '10.15'

# CocoaPods istatistiklerini devre dÄ±ÅŸÄ± bÄ±rak (build hÄ±zÄ±nÄ± artÄ±rÄ±r)
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'ephemeral', 'Flutter-Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} bulunamadÄ±. 'flutter pub get' komutunu Ã§alÄ±ÅŸtÄ±rÄ±n."
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT bulunamadÄ±. 'Flutter-Generated.xcconfig' dosyasÄ±nÄ± silip 'flutter pub get' Ã§alÄ±ÅŸtÄ±rÄ±n."
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_macos_podfile_setup

target 'Runner' do
  use_frameworks!
  flutter_install_all_macos_pods File.dirname(File.realpath(__FILE__))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

# âœ… Post-install: Derleme hedefi, mimariler ve uyarÄ± dÃ¼zeltmeleri
post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_macos_build_settings(target)

    target.build_configurations.each do |config|
      # ğŸ”¹ Minimum macOS hedefi 10.15 olarak zorlanÄ±r
      config.build_settings['MACOSX_DEPLOYMENT_TARGET'] = '10.15'

      # ğŸ”¹ ARCHS ve bitcode sorunlarÄ±nÄ± dÃ¼zeltir (Xcode build hatalarÄ± iÃ§in)
      config.build_settings['ARCHS'] = '$(ARCHS_STANDARD)'
      config.build_settings['ONLY_ACTIVE_ARCH'] = 'NO'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
    end
  end
end