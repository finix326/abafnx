platform :ios, '13.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Flutter SDK yolunu dinamik olarak bul
flutter_root = ENV['FLUTTER_ROOT']&.strip

if flutter_root.nil? || flutter_root.empty?
  flutter_exec = `which flutter`.strip

  if flutter_exec.empty?
    raise 'Flutter SDK bulunamadı. Lütfen FLUTTER_ROOT ortam değişkenini ayarlayın veya flutter komutunu PATH içerisine ekleyin.'
  end

  flutter_root = File.expand_path('..', File.dirname(File.realpath(flutter_exec)))
end

ENV['FLUTTER_ROOT'] = flutter_root

podhelper = File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper.rb')

unless File.exist?(podhelper)
  raise "#{flutter_root} geçerli bir Flutter SDK dizini değil. Lütfen Flutter kurulumunuzu kontrol edin."
end

load podhelper

# Firebase/Google pods ile uyum için static frameworks
use_frameworks! :linkage => :static

flutter_ios_podfile_setup

target 'Runner' do
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  flutter_post_install(installer) if defined?(flutter_post_install)

  # Modül başlık/Swift import sorunlarını önlemek için
  installer.pods_project.targets.each do |t|
    flutter_additional_ios_build_settings(t)
    t.build_configurations.each do |config|
      config.build_settings['DEFINES_MODULE'] = 'YES'
      config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end
  end
end